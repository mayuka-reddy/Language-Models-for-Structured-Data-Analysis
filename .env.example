# Environment Variables for ML Model Performance Demo
# Using Olist Brazilian E-Commerce Public Dataset (Kaggle)
# Dataset: ~100,000 customer orders from 2016-2018
# Item-Level: 112,650 rows, 37 columns
# Order-Level: 98,666 rows, 13 columns

# API Keys (Required for advanced models and experiment tracking)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here
WANDB_API_KEY=your_wandb_api_key_here

# Model Configuration
MODEL_CACHE_DIR=./models/cache
TRANSFORMERS_CACHE=./models/cache
MODEL_NAME=t5-small

# Database Configuration - Olist Brazilian E-Commerce Dataset
OLIST_ITEM_LEVEL_PATH=data/olist_item_level.csv
OLIST_ORDER_LEVEL_PATH=data/olist_order_level.csv
DATABASE_TYPE=csv

# Training Configuration
ML_DEMO_OUTPUT_DIR=models/training/model_checkpoints
ML_DEMO_LEARNING_RATE=5e-5
ML_DEMO_BATCH_SIZE=8
ML_DEMO_NUM_EPOCHS=3

# Experiment Tracking
ML_DEMO_WANDB_PROJECT=nl2sql-performance-demo
WANDB_PROJECT=nl2sql-performance-demo
WANDB_ENTITY=your_wandb_entity_here

# RAG Configuration
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_INDEX_CACHE_DIR=models/techniques/rag_indices

# UI Configuration
UI_HOST=0.0.0.0
UI_PORT=7860
UI_SHARE=false
UI_DEBUG=true

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
QUERY_TIMEOUT=30
INFERENCE_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Settings
DEVELOPMENT_MODE=true
ENABLE_MODEL_COMPARISON=true

# GPU Settings
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=auto

# HuggingFace Settings
HF_HOME=./models/cache
HF_TOKEN=your_huggingface_token_here